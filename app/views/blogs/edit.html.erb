</div class="fillP">
  <div class="formbox">
    <% if @blog.errors.any? %>
      <h1>Please correct the following issues: </h1>
      <%= @blog.errors.messages do |key, value | %>
        <p>"#{key}: #{value}"</p>
      <% end %>
    <% end %>
    <%= form_for @blog do |form| %>
      Title: <%= form.text_field :title %><br />
      Content: <%= form.text_field :content %><br />
      <%= form.submit %>
    <% end %>
  </div>
</div>
